        div.mag-0
          img(src="/images/magi.png")
        div.mag-1
          img(src="/images/magi.png")
        div.mag-2
          img(src="/images/magi.png")
        div.mag-3
          img(src="/images/magi.png")
      #attachment-select.grid
        div.attachment-0
          img(src="/images/barrel_stocki.png")
        div.attachment-1
          img(src="/images/barrel_stocki.png")
        div.attachment-2
          img(src="/images/barrel_stocki.png")
